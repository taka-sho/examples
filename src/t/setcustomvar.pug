extends ../integration/index.pug

block footer_content
  script.
    /**
     * set custom variables before starting a track
     * @param  {string} "create" is function name, which initialize the Tracker
     * @param  {string} "10-732" ProjectId
     * @param  {Object} {"customVar": ["init"]} set a first custom variable, e.g,. "init" is setted to customVar1
     * @return {void}
     */
    ud("create", "10-732", {
      "customVar": [
        "init"
      ]
    });
    ud("analyze");
  script.
    setTimeout(function () {
      /**
       * set customvar when wait a 5 min
       * @param  {string} "setCustomVar" api name
       * @param  {Array} Update customvar, customVar1: "5 minites"
       * @return {void}
       */
      ud('setCustomVar', ["5 minitues"]);
    }, 1000 * 60 * 5)

  script.
    $("#about").on("click", function() {
      /**
       * set customvar when #about click
       * @param  {string} "setCustomVar" api name
       * @param  {Array} Update customvar, customVar1: active, customVar2: "click #about link"
       * @return {void}
       */
      ud("setCustomVar", ["active", "click #about link"]);
    });
