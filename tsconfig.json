{
  "compilerOptions": {
    "target": "es6",
    "module": "es2015",
    "jsx": "react",
    "removeComments": true,
    "importHelpers": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "outDir": "./tmp",
    "allowSyntheticDefaultImports": true,
    "preserveSymlinks": true,
    "experimentalDecorators": true,
    "sourceMap": true
  },
  "include": [
    "test"
  ],
  "exclude": [
    "node_modules"
  ]
}
